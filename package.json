{
  "name": "demobot",
  "version": "1.0.0",
  "description": "Nako's Demo Bot",
  "main": "app.js",
  "repository": "https://github.com/nako-app/demo-bot",
  "dependencies": {
    "husky": "^4.3.6",
    "lambda-ssm-loader": "^1.0.0",
    "nako-server-sdk": "^0.0.13",
    "node-fetch": "^2.6.1",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.71",
    "@types/node": "^14.14.25",
    "cpx": "^1.5.0"
  },
  "author": "Nako",
  "license": "MIT",
  "scripts": {
    "prebuild": "mkdirp ../dist || true",
    "build": "npm run prebuild && npm run copy-dependencies && tsc",
    "copy-dependencies": "cpx \"./node_modules/**/*\" ../dist/node_modules && cpx \"./package.json\" \"./dist\"",
    "deploy": "sam build && sam deploy --no-confirm-changeset",
    "lint": "prettier --config=.prettierrc \"**/*.js\" --write --ignore-unknown"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
